{
    "presets": ["next/babel"],
    "plugins": [
        [
            "module-resolver",
            {
                "root": ["./"],
                "alias": {
                    "components": "./components",
                    "shared": "./shared",
                    "pages": "./pages",
                    "lib": "./lib"
                }
            }
        ],
        [
            "styled-jsx/babel",
            {
                "plugins": ["styled-jsx-plugin-postcss"],
            },
        ]
    ]
}
